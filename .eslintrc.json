{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "overrides": [
    {
      "files": ["smoke.test.js"],
      "env": { "node": true, "browser": false }
    },
    {
      "files": ["service-worker.js"],
      "env": { "serviceworker": true }
    }
  ],
  "rules": {
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-undef": "error",
    "semi": ["error", "always"]
  }
}
